<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BigButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primaryGreen</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="InfoCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ModeButton" parent="Widget.Material3.Button">
        <item name="strokeColor">@color/strokeColor</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/conatainerBackground</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/background</item>
        <item name="titleTextAppearance">@style/textAppbar</item>
    </style>

    <style name="textAppbar">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="PrimaryButtonGreen" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primaryGreen</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="OutlinedButtonGreen" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primaryGreen</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primaryGreen</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="OptionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_option_btn</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>


    <style name="QuizProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:backgroundTint">@color/strokeColor</item>
        <item name="android:progressTint">@color/primaryGreen</item>
    </style>

    <style name="QuizProgressText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/primaryGreen</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
    </style>


</resources>